{
  "name": "locallm-agent",
  "version": "1.0.0",
  "description": "Electron desktop app for local LLM interaction via Ollama",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build:native": "cd native && cmake-js compile",
    "build:native:debug": "cd native && cmake-js compile --debug",
    "rebuild:native": "cd native && cmake-js rebuild",
    "clean:native": "cd native && cmake-js clean",
    "postinstall": "npm run build:native"
  },
  "keywords": [
    "electron",
    "ollama",
    "llm",
    "ai",
    "chat",
    "ghost-text"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tavily/core": "^0.6.3",
    "dotenv": "^17.2.3",
    "ollama": "^0.6.3"
  },
  "devDependencies": {
    "cmake-js": "^7.4.0",
    "electron": "^33.2.1",
    "node-addon-api": "^8.5.0"
  }
}
